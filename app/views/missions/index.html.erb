<div class = "container">
<h1>Missions proposées <i class="fas fa-hands-helping"></i></h1>
  <div class="cards bg-white p-3 mt-4" style="min-height : 65vh">
    <% @missions.each do |mission| %>
    <% if mission.done == false %>
      <%= link_to  mission_path(mission) do %>
        <% if mission.photo.attached?%>
          <div class="card-category p-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path mission.photo.key %>');">
            <h4><%= mission.title.capitalize %></h4>
            <p><%= mission.location.capitalize %></p>
            <p id="date-mission"><%=mission.start_time.strftime("%d/%m/%Y")%></p>
            <p id="quota-mission"><i class="fas fa-user-friends"></i> <%="#{mission.participations.count}  / #{mission.quota}"%> </p>
          </div>
        <% else %>
          <div class="card-category p-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dgrrbkgz4/image/upload/v1606412867/drurojfaw2bmayozxkbe.jpg)">
            <h4><%= mission.title.capitalize %></h4>
            <p><%= mission.location.capitalize %></p>
            <p id="date-mission"><%=mission.start_time.strftime("%d/%m/%Y")%></p>
            <p id="quota-mission"><i class="fas fa-user-friends"></i> <%="#{mission.participations.count}  / #{mission.quota}"%> </p>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <% end %>
 </div>
</div>

<br>
