<h1> <%= @mission.title  %></h1>

<p>Description : <%= @mission.description %></p> <br>
<p>Localisation: <%= @mission.location %></p> <br>
<p>Dates: <%= @mission.start_time %> - <%= @mission.end_time %> </p> <br>
<p>Organisateur: <%= cl_image_tag @mission.user.photo.key, height: 300, width: 400,crop: :thumb, gravity: :face %></p>

<% if @mission.quota %>
 <p>Aidez-nous à atteindre les <%= @mission.quota %> bénévoles svp</p>
 <%= "Nombre: #{@mission.participations.count} / #{@mission.quota}" %> <br> <br>
<% end %>

<%= link_to "RETOUR", missions_path %> <br>
<% if @mission.users.include?(current_user) %>
  <%= link_to "SE DESINSCRIRE", mission_participation_path(@mission), method: :delete %>
<% else %>
  <%= link_to "PARTICIPER", mission_participations_path(@mission), method: "post"  %>
<% end %> <br>


<% @mission.users.each do |user| %>
  <%= cl_image_tag user.photo.key, height: 300, width: 400,crop: :thumb, gravity: :face %>
<% end %> <br>

<% if @mission.photo.attached? %>
  <%= cl_image_tag @mission.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <%= cl_image_tag("jcflwedvuuwwkihvec2k", width: 150, height: 150, crop: :thumb, gravity: :face) %>
<% end %>