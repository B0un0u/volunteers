<div class="navbar navbar-expand-sm navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
  <h4>Global Volunteers  </h4>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "HOME", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Découvrir", "#", class: "nav-link" %>
        </li>
         <li class="nav-item">
          <%= link_to "Créer une mission", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mon profil", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "HOME", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "CONNEXION", "#", class: "nav-link" %>
        </li>
         <li class="nav-item">
          <%= link_to "INSCRIPTION", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
